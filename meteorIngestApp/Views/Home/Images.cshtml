@model PaginatedList<skyImageWS.SkyImage>



@{
    ViewData["Title"] = "SkyImagesView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SkyImagesView</h1>


@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                Sky Image ID
            </th>
            <th>
                Filename
            </th>
            <th>
                Camera
            </th>
            <th>
                Objects
            </th>
            <th>
                Date
            </th>
            <th>
                Image set
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            string style = item.SelectedForTraining == true ? "background-color:darkseagreen" : null;

            <tr style="@style">
                <td>
                    @Html.DisplayFor(modelItem => item.SkyImageId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Filename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Camera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetectedObjects.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageSet)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SkyImageId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SkyImageId })
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Images"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Images"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>